<div class="align-center">
<%= form_for [@bar, @comment] do |f| %>
  <%= f.label :description%>
  <%= f.text_field :description %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>


  <% if @comment.persisted? %>
    <%= f.submit "Update Comment" %>
  <% else %>
    <%= f.submit "Add Comment", {:class=>"btn btn-default"}%>
    <%= link_to "Cancel", bar_path(@bar), {:class=>"btn btn-default"} %>
  <% end %>
<% end %>


</div>



