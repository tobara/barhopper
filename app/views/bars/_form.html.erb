
<%= form_for @bar do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :address %>
  <%= f.text_field :address %>


  <% if @bar.persisted? %>
    <%= f.submit "Update Bar", class: "button small" %>
  <% else %>
    <%= f.submit "Add Bar", class: "button small" %>
  <% end %>
<% end %>